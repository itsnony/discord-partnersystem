<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Partner - Partner Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.0.0/fonts/remixicon.css" rel="stylesheet">
  <style>
    body { font-family: 'Outfit', sans-serif; }
  </style>
</head>
<body class="bg-gray-50">
  <!-- Inlined navbar instead of using include -->
  <nav class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center space-x-8">
          <a href="/dashboard" class="flex items-center space-x-2">
            <i class="ri-shield-user-line text-2xl text-indigo-600"></i>
            <span class="font-bold text-xl text-gray-900">Partner Dashboard</span>
          </a>
          
          <div class="hidden md:flex space-x-4">
            <a href="/dashboard" class="px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-100 transition">
              <i class="ri-dashboard-line mr-1"></i>Dashboard
            </a>
            <a href="/dashboard/partners" class="px-3 py-2 rounded-lg bg-indigo-100 text-indigo-700 transition">
              <i class="ri-team-line mr-1"></i>Partner
            </a>
            <a href="/dashboard/applications" class="px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-100 transition">
              <i class="ri-mail-line mr-1"></i>Bewerbungen
            </a>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-3">
            <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="<%= user.username %>" class="w-8 h-8 rounded-full">
            <span class="text-sm font-medium text-gray-700"><%= user.username %></span>
          </div>
          <a href="/auth/logout" class="px-4 py-2 text-sm text-red-600 hover:bg-red-50 rounded-lg transition">
            <i class="ri-logout-box-line mr-1"></i>Abmelden
          </a>
        </div>
      </div>
    </div>
  </nav>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Aktive Partner</h1>
      <p class="text-gray-600 mt-1"><%= partners.length %> Partner insgesamt</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% partners.forEach(partner => { %>
      <div class="bg-white rounded-lg shadow overflow-hidden hover:shadow-lg transition">
        <div class="p-6">
          <!-- Added exemption badge -->
          <% if (partner.exemptFromRequirements) { %>
          <div class="mb-2">
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              <i class="ri-vip-crown-line mr-1"></i>Von Anforderungen befreit
            </span>
          </div>
          <% } %>
          
          <div class="flex items-center space-x-4 mb-4">
            <% if (partner.icon) { %>
            <img src="<%= partner.icon %>" alt="<%= partner.name %>" class="w-16 h-16 rounded-full">
            <% } else { %>
            <div class="w-16 h-16 rounded-full bg-indigo-100 flex items-center justify-center">
              <i class="ri-team-line text-indigo-600 text-2xl"></i>
            </div>
            <% } %>
            <div class="flex-1">
              <h3 class="font-bold text-lg text-gray-900"><%= partner.name %></h3>
              <p class="text-sm text-gray-600"><%= partner.memberCount %> Mitglieder</p>
            </div>
          </div>
          
          <p class="text-gray-700 text-sm mb-4 line-clamp-3"><%= partner.beschreibung || partner.description %></p>
          
          <!-- Added exemption toggle button -->
          <div class="flex space-x-2">
            <a href="<%= partner.invite %>" target="_blank" class="flex-1 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition text-center text-sm">
              <i class="ri-external-link-line mr-1"></i>Besuchen
            </a>
            <button onclick="toggleExemption('<%= partner._id %>', '<%= partner.name %>')" class="px-4 py-2 <%= partner.exemptFromRequirements ? 'bg-yellow-600 hover:bg-yellow-700' : 'bg-gray-600 hover:bg-gray-700' %> text-white rounded-lg transition" title="Anforderungen-Befreiung umschalten">
              <i class="ri-vip-crown-line"></i>
            </button>
            <button onclick="removePartner('<%= partner._id %>', '<%= partner.name %>')" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition">
              <i class="ri-delete-bin-line"></i>
            </button>
          </div>
        </div>
      </div>
      <% }); %>
    </div>

    <% if (partners.length === 0) { %>
    <div class="text-center py-12">
      <i class="ri-team-line text-6xl text-gray-400 mb-4"></i>
      <h3 class="text-xl font-semibold text-gray-700 mb-2">Keine Partner vorhanden</h3>
      <p class="text-gray-600">Es wurden noch keine Partner hinzugefügt.</p>
    </div>
    <% } %>
  </div>

  <script>
    async function toggleExemption(id, name) {
      try {
        const res = await fetch(`/api/partners/exempt/${id}`, { method: 'POST' });
        const data = await res.json();
        if (data.success) {
          location.reload();
        } else {
          alert('Fehler: ' + data.message);
        }
      } catch (error) {
        alert('Fehler beim Umschalten der Befreiung');
      }
    }

    async function removePartner(id, name) {
      if (!confirm(`Möchtest du ${name} wirklich als Partner entfernen?`)) return;
      try {
        const res = await fetch(`/api/partners/${id}`, { method: 'DELETE' });
        const data = await res.json();
        if (data.success) {
          location.reload();
        } else {
          alert('Fehler: ' + data.message);
        }
      } catch (error) {
        alert('Fehler beim Entfernen des Partners');
      }
    }
  </script>
</body>
</html>
